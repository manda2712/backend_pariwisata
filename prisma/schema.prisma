generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id            Int    @id @default(autoincrement())
  nama_Lengkap  String
  jenis_kelamin String
  username      String
  password      String
  role          Role
}

enum Role {
  Admin
  user
}

model TourPackage {
  id          Int    @id @default(autoincrement())
  nama_wisata String
  harga       String
  deskripsi   String
  kontak      String
  media       String
  lokasi      String
}

model Ulasan {
  id        Int      @id @default(autoincrement())
  nama      String
  rating    Int
  komentar  String
  createdAt DateTime @default(now())
}

model Event {
  id          Int      @id @default(autoincrement())
  nameEvent   String
  description String
  location    String
  foto        String
  startdate   DateTime
  enddate     DateTime
}

model desaWisata {
  id          Int       @id @default(autoincrement())
  namaDesa    String
  foto        String
  lokasi      String
  deskripsi   String
  longitude   String
  latitude    String
  jenisDesa   JenisDesa
  jalur_darat String
  jalur_udara String
  jalur_laut  String
}

enum JenisDesa {
  DESA_UNGGULAN
  DESA_WISATA
}

model Kuliner {
  id           Int          @id @default(autoincrement())
  nama_makanan String
  foto         String
  deskripsi    String
  rumahMakans  RumahMakan[]
}

model RumahMakan {
  id         Int     @id @default(autoincrement())
  resto      String
  foto       String
  kulinerId  Int
  lokasi     String
  link_gmaps String
  kuliner    Kuliner @relation(fields: [kulinerId], references: [id])
}

model Hotel {
  id                 Int     @id @default(autoincrement())
  nama_hotel         String
  foto               String
  telepon            String
  alamat             String
  deskripsi          String
  jumlah_kamar       String
  jumlah_tempatTidur String
  harga              String?
  website            String?
  link_gmaps         String
  lokasi             String
}
